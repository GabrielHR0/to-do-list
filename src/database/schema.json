{
  "users": {
    "columns": {
      "id": "INTEGER PRIMARY KEY AUTOINCREMENT",
      "email": "TEXT NOT NULL UNIQUE",
      "password": "TEXT NOT NULL"
    }
  },
  "taskLists": {
    "columns": {
      "id": "INTEGER PRIMARY KEY AUTOINCREMENT",
      "title": "TEXT NOT NULL",
      "userId": "INTEGER NOT NULL"
    },
    "foreignKeys": [
      {"column": "userId", "references": "users(id)"}
    ]
  },
  "tasks": {
    "columns": {
      "id": "INTEGER PRIMARY KEY AUTOINCREMENT",
      "title": "TEXT NOT NULL",
      "description": "TEXT",
      "status": "TEXT NOT NULL",
      "dueDate": "TEXT",
      "endDate": "TEXT",
      "taskListId": "INTEGER NOT NULL"
    },
    "foreignKeys": [
      {"column": "taskListId", "references": "taskLists(id)"}
    ]
  },
  "steps": {
    "columns": {
      "id": "INTEGER PRIMARY KEY AUTOINCREMENT",
      "title": "TEXT NOT NULL",
      "status": "TEXT NOT NULL",
      "taskId": "INTEGER NOT NULL"
    },
    "foreignKeys": [
      {"column": "taskId", "references": "tasks(id)"}
    ]
  },
  "taskOrder": {
    "columns": {
      "taskListId": "INTEGER NOT NULL",
      "taskId": "INTEGER NOT NULL",
      "position": "INTEGER NOT NULL"
    },
    "primaryKey": ["taskListId", "taskId", "position"],
    "foreignKeys": [
      {"column": "taskListId", "references": "taskLists(id)"},
      {"column": "taskId", "references": "tasks(id)"}
    ]
  }
}
